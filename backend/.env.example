# Environment
NODE_ENV=development
PORT=5000

# Application URLs
APP_ORIGIN=http://localhost:5000
CLIENT_URL=http://localhost:3000

# MongoDB
MONGO_URI=mongodb://127.0.0.1:27017/testdb

# JWT Secrets
JWT_SECRET=dev_jwt_secret
JWT_REFRESH_SECRET=dev_refresh_secret

# Mailtrap (for testing emails)
MAILTRAP_TOKEN=test_token
MAILTRAP_ENDPOINT=smtp.mailtrap.io

# Cloudinary (you can skip these if not testing image upload)
CLOUDINARY_CLOUD_NAME=sample_cloud
CLOUDINARY_API_KEY=1234567890
CLOUDINARY_API_SECRET=sample_secret

# SendGrid (skip if not sending emails)
SENDGRID_API_KEY=SG.test-key

# Paystack (skip if not testing payments)
PAYSTACK_SECRET_KEY=test_paystack_key
